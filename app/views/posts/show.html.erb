<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h3>Comments</h3>

<% @post.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <p><i><%= comment.created_at %></i></p>
<% end %>

<%= form_for [@post, Comment.new] do |f| %>

  <%= f.text_area :body %>
  <%= f.hidden_field :post_id, value: @post.id %>

  <%= f.submit %>

<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
